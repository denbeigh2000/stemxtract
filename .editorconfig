# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
# Unix-style newlines
end_of_line = lf
# Newline ending every file
insert_final_newline = true
# Default character set
charset = utf-8

indent_style = space
indent_size = 4

max_line_length = 100

[*.toml]
indent_size = 2

# JS/TS/JSX/TSX files
[*.{js,ts}{,x}]
indent_size = 2

[*.py]
max_line_length = 88
